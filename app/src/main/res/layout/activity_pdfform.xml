<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.admin.pdf.PDFFormActivity">

    <include layout="@layout/toolbar"/>

    <include layout="@layout/layout_module_spnr"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pdf_url_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PDF Url"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pdf_name_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PDF Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pdf_description_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PDF Description"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/add_pdf_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new PDF FILE"/>

</LinearLayout>