<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.module.ModuleActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/colorPrimary"
        android:text="Create new Module"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/module_name_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Module Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/module_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Module Description"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/add_module_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Module"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/modules_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>